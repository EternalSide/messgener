
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  userId String @unique
  email String @db.Text  @unique
  username String @unique
  name String
   profilePic String @db.Text
   backgroundPic String? @db.Text
  directMessages DirectMessage[]
    channelMessages ChannelMessage[]
  chatsInitiated Chat[] @relation("UserOne")
  chatsReceived Chat[] @relation("UserTwo")
   channels Channel[]



  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Chat {
  id String @id @default(uuid())

  userOneId String
  userOne User @relation("UserOne", fields: [userOneId], references: [id], onDelete: Cascade)
  userTwoId String
  userTwo User @relation("UserTwo", fields: [userTwoId], references: [id], onDelete: Cascade)

  directMessages DirectMessage[]

  @@index([userTwoId])
  @@unique([userOneId, userTwoId])
}

model Channel {
  id String @id @default(uuid())

name String 
description String?
link String @unique
picture String?
type String?
  creatorId String
  creator User @relation( fields: [creatorId], references: [id], onDelete: Cascade)
  posts ChannelMessage[]

  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([creatorId])

}

model ChannelMessage {
  id String @id @default(uuid())
  content String @db.Text

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  channelId String
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([channelId])
}






model DirectMessage {
  id String @id @default(uuid())
  content String @db.Text
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatId String
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([chatId])
}